{
	"name": "leawind-third-person-docs",
	"author": "Leawind",
	"description": "A documentation for minecraft mod Leawind's Third Person",
	"license": "MIT",
	"scripts": {
		"gen-mc-vers-table": "node scripts/gen-mc-vers-table.mjs",
		"docs:clean": "rimraf docs/.vitepress/dist",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs",
		"docs:dev": "vitepress dev docs",
		"pretty": "prettier -w \"./docs/**/*.md\"",
		"build-all": "run-s docs:prebuild docs:rebuild",
		"docs:prebuild": "run-s gen-mc-vers-table",
		"docs:rebuild": "run-s docs:clean docs:build"
	},
	"private": true,
	"dependencies": {
		"npm-run-all": "^4.1.5",
		"rimraf": "^5.0.7",
		"vitepress": "1.0.0-rc.44"
	},
	"devDependencies": {
		"@types/node": "^20.11.19",
		"markdown-it-mathjax3": "^4.3.2",
		"mermaid": "^10.9.1",
		"prettier": "^3.3.2",
		"vitepress-plugin-mermaid": "^2.0.16"
	}
}
